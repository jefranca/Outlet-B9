generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int      @id @default(autoincrement())
  name     String   
  email    String   @unique
  password String
  img      String
  adresses Address[]
}

model Address{
  id            Int   @id @default(autoincrement())
  userId        Int
  street        String
  neighborhood  String
  city          String
  state         String
  streetNumber  Int
  user User @relation(fields: [userId], references: [id])
  orders        Order[]
}

model Order{
  id          Int   @id @default(autoincrement())
  addressId   Int
  totalValue  Int
  adresses    Address  @relation(fields: [addressId], references: [id])
  items       ItemsOnOrders[]
}

model Item{
  id        Int   @id @default(autoincrement())
  product   String  
  size      String
  img       String
  amount    Int
  orders    ItemsOnOrders[]
}

model ItemsOnOrders{
  id        Int  @id @default(autoincrement())
  order     Order @relation(fields: [orderId],references:[id])
  orderId   Int
  items     Item @relation(fields: [itemId],references:[id])
  itemId    Int
}